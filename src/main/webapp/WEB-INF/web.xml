<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Health Wellness Tracker</display-name>
  <!-- Servlet Definitions -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.healthwellness.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.healthwellness.controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BMICalculatorServlet</servlet-name>
    <servlet-class>com.healthwellness.controller.BMICalculatorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DietRecommendationServlet</servlet-name>
    <servlet-class>com.healthwellness.controller.DietRecommendationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ActivityTrackerServlet</servlet-name>
    <servlet-class>com.healthwellness.controller.ActivityTrackerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NutrientTrackerServlet</servlet-name>
    <servlet-class>com.healthwellness.controller.NutrientTrackerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.healthwellness.controller.LogoutServlet</servlet-class>
  </servlet>
  <!-- Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BMICalculatorServlet</servlet-name>
    <url-pattern>/bmi-calculator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DietRecommendationServlet</servlet-name>
    <url-pattern>/diet-recommendation</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ActivityTrackerServlet</servlet-name>
    <url-pattern>/activity-tracker</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NutrientTrackerServlet</servlet-name>
    <url-pattern>/nutrient-tracker</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <!-- Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>